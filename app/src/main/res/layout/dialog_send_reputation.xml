<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Completion Rewarding"
        android:textSize="20dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/textView_sc_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How did %fn perform? Send him reputation that reflect the quality of the activity completion."
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:text="Skip"
        android:id="@+id/button_sc_skip"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:text="Nice! (+1)"
        android:id="@+id/button_sc_send_1"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:text="Great! (+2)"
        android:id="@+id/button_sc_send_5"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:text="Perfect! (+3)"
        android:id="@+id/button_sc_send_10"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


    </LinearLayout>
</LinearLayout>
