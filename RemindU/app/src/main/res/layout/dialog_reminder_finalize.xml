<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <TextView
        android:text="Reminder Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_rf_who" />

    <TextView
        android:text="Reminder Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_rf_message" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="Not Started"
            android:layout_height="60dp"
            android:id="@+id/button_rf_not_started"
            android:layout_width="wrap_content"
            android:layout_weight="0.3"/>

        <Button
            android:text="In Progress"
            android:layout_height="60dp"
            android:id="@+id/button_rf_in_progress"
            android:layout_width="wrap_content"
            android:layout_weight="0.3"/>

        <Button
            android:text="Is Complete"
            android:layout_height="60dp"
            android:id="@+id/button_rf_complete"
            android:layout_width="wrap_content"
            android:layout_weight="0.3"/>

    </LinearLayout>


</LinearLayout>
