<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#cdcd"/>
    <ImageView
        android:id="@+id/reminder_cp_button_1"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:src="@drawable/document_48"
        />
    <ImageView
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="#cdcd"/>
    <ImageView
        android:id="@+id/reminder_cp_button_2"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:src="@drawable/delete_48"
        />
    <ImageView
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="#cdcd"/>
    <ImageView
        android:id="@+id/reminder_cp_button_3"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:src="@drawable/mute_48"
        />
    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#cdcd"/>

</LinearLayout>
